{
  "include": ["src/**/*", "scripts/**/*", "tests/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"]
    },
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM"],
    "types": ["node", "vitest/globals"]
  }
}
